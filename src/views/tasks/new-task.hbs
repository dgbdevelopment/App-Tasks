<div class="col-lg-5 mx-auto">
   <div class="card">
      <div class="card-header"><h3>Nueva Tarea</h3></div>
      <div class="card-body">
         <form action="/tasks/add-task" method="POST">
            <div class="form-group">
               <input type="text" name="title" class="form-control" placeholder="Título de la tarea" autofocus="true">
            </div>
            <div class="form-group">               
               <textarea name="description" class="form-control" placeholder="Descripción o anotaciones">{{description}}</textarea>
            </div>
            <div class="form-group text-center">
               <p><label for="options">Prioridad</label></p>
               <div class="btn-group btn-group-toggle" data-toggle="buttons">
                  <label class="btn btn-secondary">
                     <input type="radio" name="priority" id="low" autocomplete="off" value="Baja"> Baja
                  </label>
                  <label class="btn btn-success active">
                     <input type="radio" name="priority" id="normal" autocomplete="off" value="Normal" checked> Normal
                     <!-- checked priority 'normal' -->
                  </label>                  
                  <label class="btn btn-warning">
                     <input type="radio" name="priority" id="high" autocomplete="off" value="Alta"> Alta
                  </label>
                  <label class="btn btn-danger">
                     <input type="radio" name="priority" id="urgent" autocomplete="off" value="Urgente"> Urgente
                  </label>
               </div>
            </div>
            <div class="form-group mt-5">
               <button class="btn btn-primary btn-block btn-block" type="submit">Crear Tarea</button>
            </div>
         </form>
      </div>   
   </div>
   
</div>